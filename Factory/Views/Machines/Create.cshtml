@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2 class="mt-4 mb-4 text-center">Add a new machine</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Brand, new { @class = "form-label" })
    @Html.TextBoxFor(model => model.Brand, new { @class = "form-control", required = "required" })
    <br />
    @Html.Label("Select an engineer number")
    @Html.DropDownList("EngineerId")
    <br />
    <button class="btn btn-secondary"type="submit" value="Add new machine">Submit</button>
}
<p class="h5 mt-5">@Html.ActionLink("Show all machines", "Index")</p>