@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h2 class="mt-4 mb-4 text-center">Machines</h2>
<hr />

@if (@Model.Count == 0)
{
  <h5>No machines have been added yet!</h5>
} 

@foreach (Machine machine in Model)
{
  <p class="h5 mt-4"  >@Html.ActionLink($"{machine.Brand}", "Details", new { id = machine.MachineId })</p>
}

<p class="h5 mt-5"> @Html.ActionLink("Add new machine", "Create")</p>